    <class>Entitys.BeAufgabe</class>
    <class>Entitys.Benutzer</class>
    <class>Entitys.Klausur</class>
    <class>Entitys.LernStatus</class>
    <class>Entitys.Modul</class>
    <class>Entitys.Plattform</class>
    <class>Entitys.Teilnahme</class>
    <class>Entitys.Thema</class>
    <class>Entitys.Token</class>
    <class>Entitys.Uni</class>
    <class>Entitys.Pruefungsperiode</class>
    <class>Entitys.Statistik</class>
    <class>Entitys.ZuAufgabe</class>
    <class>Entitys.XGAufgabe</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/BotData"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.user" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
